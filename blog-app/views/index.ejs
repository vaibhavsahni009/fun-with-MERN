<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Blog App</title>
</head>

<body>
  <h1>Blog Posts</h1>
  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <a href="/edit/<%= post.id %>">Edit</a>
        <a href="#" class="delete-post" data-id="<%= post.id %>">Delete</a>
      </li>
    <% }); %>
  </ul>

  <!-- New Post Form -->
  <form action="/create" method="POST" id="new-post-form">
    <label for="new-title">Title:</label>
    <input type="text" id="new-title" name="title" required>
    <label for="new-content">Content:</label>
    <textarea id="new-content" name="content" required></textarea>
    <button type="submit">Create Post</button>
  </form>

  <!-- Include the client-side script -->
  <script src="/script.js"></script>
</body>

</html>
